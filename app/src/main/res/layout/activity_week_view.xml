            android:textSize="14sp"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="周日"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:layout_width="wrap_content"
